<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="primaryColor">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="primaryLightColor">@color/primaryLight</item>
        <item name="primaryShadowColor">@color/primaryShadow</item>
        <item name="primaryTextColor">@color/primaryText</item>
        <item name="primaryTextDarkColor">@color/primaryTextDark</item>
        <item name="primaryDarkColor">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryAccent</item>
        <item name="primaryPageColor">@color/primaryPage</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextView</item>
    </style>

    <style name="SnackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/primaryPageLight</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar.FullWidth">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.AppBarOverlay.Collapsed"
        parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Shadow"
        parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/primaryTextDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">@color/primaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="CheckboxStyle" parent="AppTheme">
        <item name="buttonTint">?attr/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">40dp</item>
    </style>

</resources>
